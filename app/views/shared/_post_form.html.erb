<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
  <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title (optional)", class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.text_field :location, placeholder: "Location (optional)", class: 'form-control' %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>